<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xu.shawn.demoapp.ProfileActivity"
    tools:showIn="@layout/activity_profile"
    android:weightSum="1"
    android:background="#f0dfc4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/gridView"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="My Preference "
            android:id="@+id/button"
            android:background="#aeca843b"
            android:textSize="20dp"
            android:elegantTextHeight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="Chinese Food"
                        android:id="@+id/button1"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton1"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="JAPANESE FOOD"
                        android:id="@+id/button2"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="WHATEVER!"
                        android:id="@+id/radioButton2"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="INDIAN FOOD"
                        android:id="@+id/button3"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I DISLIKE IT !"
                        android:id="@+id/radioButton3"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="AMEIRICAN FOOD"
                        android:id="@+id/button4"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I HATE IT !"
                        android:id="@+id/radioButton4"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="HISPANIC FOOD"
                        android:id="@+id/button5"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MY FAVORITE!"
                        android:id="@+id/radioButton5"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="FRENCH FOOD"
                        android:id="@+id/button6"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton6"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="ITALIAN FOOD"
                        android:id="@+id/button7"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton7"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="Vietnamese FOOD"
                        android:id="@+id/button8"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton8"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="FAST FOOD"
                        android:id="@+id/button9"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton9"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <Button
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:text="OTHER FOOD"
                        android:id="@+id/button10"
                        android:background="#aeca843b" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I LIKE IT !"
                        android:id="@+id/radioButton"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/gridView"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

</RelativeLayout>
